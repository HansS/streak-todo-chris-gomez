<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <todos-progress-bar todos="{todos}"></todos-progress-bar>

      <h6>Active</h6>

      <div class="list-group">
        {{#each todos}}
          <a href="javascript://" class="list-group-item {{#if isCompleted}}disabled{{/if}}">
            {{title}}
            <span class="glyphicon glyphicon-ok"></span>
          </a>
        {{/each}}
      </div>

      <h6>Completed</h6>

    </div>
  </div>
</div>