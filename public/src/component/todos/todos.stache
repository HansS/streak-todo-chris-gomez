<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <!--<todos-progress-bar todos="{todos}"></todos-progress-bar>-->

      <h6>Active</h6>

      <div class="list-group">
        {{#each todos}}
          <div class="list-group-item {{#if isCompleted}}disabled{{/if}}">
            <app-todo title="{title}" show-edit-menu="{showModal}"></app-todo>
          </div>
        {{/each}}
      </div>

      <h6>Completed</h6>

    </div>
  </div>
</div>